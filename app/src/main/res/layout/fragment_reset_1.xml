<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <customfonts.MyTextView_Poppins_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="52.7dp"
            android:text="Email"
            android:textColor="#fefefe"
            android:textSize="13.3sp"/>

    <customfonts.EditText_Poppins_Semi_Bold
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textCursorDrawable="@drawable/white_cursor_color"
            android:textSize="15sp"/>

    <View
            android:layout_width="263.7dp"
            android:layout_height="1dp"
            android:layout_gravity="left"
            android:layout_marginTop="6.3dp"
            android:background="#f2f2f3"/>
</LinearLayout>